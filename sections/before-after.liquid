<!-- before and after section -->

<!-- content -->
<section class="ba-slider-section">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="ba-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="ba-slider-wrapper">
      {% for block in section.blocks %}
        <div
          class="ba-container"
          id="ba-{{ section.id }}-{{ forloop.index }}"
          {{ block.shopify_attributes }}>
          <!-- After -->
          <div class="ba-after">
            {% if block.settings.after_image %}
              <img
                src="{{ block.settings.after_image | image_url: width: 1200 }}"
                alt="After image"
                loading="lazy">
            {% endif %}
            <span class="ba-label after">After</span>
          </div>

          <!-- Before -->
          <div class="ba-before">
            <div class="ba-before-inner">
              {% if block.settings.before_image %}
                <img
                  src="{{ block.settings.before_image | image_url: width: 1200 }}"
                  alt="Before image"
                  loading="lazy">
              {% endif %}
              <span class="ba-label before">Before</span>
            </div>
          </div>

          <!-- Handle -->
          <div class="ba-handle">
            <span class="ba-arrow left"></span>
            <span class="ba-arrow right"></span>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- style -->
<style>
  .ba-heading {
    text-align: center;
    margin-bottom: 40px;
  }

  .ba-slider-wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  @media (max-width: 768px) {
    .ba-slider-wrapper {
      grid-template-columns: 1fr;
    }
  }

  /* Slider core */
  .ba-container {
    position: relative;
    width: 100%;
    height: 350px;
    overflow: hidden;
    cursor: ew-resize;
    background: #f5f5f5;
  }

  .ba-after,
  .ba-before {
    position: absolute;
    inset: 0;
  }

  .ba-after img,
  .ba-before img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ba-before {
    width: 50%;
    z-index: 2;
    overflow: hidden;
  }

  .ba-before-inner {
    width: 100%;
    height: 100%;
  }

  /* Labels */
  .ba-label {
    position: absolute;
    bottom: 10px;
    padding: 4px 10px;
    font-size: 12px;
    color: #fff;
    border-radius: 4px;
  }

  .ba-label.before {
    left: 10px;
    background: #333;
  }

  .ba-label.after {
    right: 10px;
    background: #0a7cff;
  }

  /* Handle */
  .ba-handle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 42px;
    height: 42px;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    border: 2px solid #fff;
    background: rgba(0, 0, 0, 0.3);
    z-index: 5;
    pointer-events: none;
  }

  .ba-handle::before,
  .ba-handle::after {
    content: '';
    position: absolute;
    left: 50%;
    width: 2px;
    height: 999px;
    background: #fff;
    transform: translateX(-50%);
  }

  .ba-handle::before {
    bottom: 100%;
  }
  .ba-handle::after {
    top: 100%;
  }

  .ba-arrow {
    position: absolute;
    top: 50%;
    width: 0;
    height: 0;
    border: 6px solid transparent;
  }

  .ba-arrow.left {
    left: 8px;
    border-right-color: #fff;
    transform: translateY(-50%);
  }

  .ba-arrow.right {
    right: 8px;
    border-left-color: #fff;
    transform: translateY(-50%);
  }
</style>

<!-- javascript -->
<script>
  document.querySelectorAll('.ba-container').forEach(container => {
  const before = container.querySelector('.ba-before');
  const handle = container.querySelector('.ba-handle');
  
  const moveSlider = (x) => {
    const rect = container.getBoundingClientRect();
    let offset = x - rect.left;
    offset = Math.max(0, Math.min(offset, rect.width));
    const percent = (offset / rect.width) * 100;
  
    before.style.width = percent + '%';
    handle.style.left = percent + '%';
  };
  
  container.addEventListener('mousemove', e => {
    moveSlider(e.clientX);
  });
  
  container.addEventListener('touchmove', e => {
    moveSlider(e.touches[0].clientX);
  });
  });
</script>

